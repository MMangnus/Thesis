@article{hasson2012,
	title = {Brain-to-{Brain} coupling: {A} mechanism for creating and sharing a social world},
	volume = {16},
	issn = {1364-6613},
	shorttitle = {Brain-to-{Brain} coupling},
	url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC3269540/},
	doi = {10.1016/j.tics.2011.12.007},
