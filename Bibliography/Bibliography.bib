	pmcid = {PMC6485726},
	keywords = {Adolescent, Adult, Brain, communication, Connectome, Female, fMRI, functional connectivity, Humans, language, Language, Magnetic Resonance Imaging, Male, Speech Perception, Theory of Mind},
	pages = {1244--1265},
}

