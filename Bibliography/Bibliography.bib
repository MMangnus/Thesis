	keywords = {Brain, Brain Mapping, Functional Laterality, Humans, Image Processing, Computer-Assisted, Language, Magnetic Resonance Imaging, Neuropsychological Tests, Oxygen, Photic Stimulation, Reaction Time, Reading, Reproducibility of Results, Time Factors},
