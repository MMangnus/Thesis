	journal = {The Lancet Psychiatry},
	author = {Lai, Meng-Chuan and Kassee, Caroline and Besney, Richard and Bonato, Sarah and Hull, Laura and Mandy, William and Szatmari, Peter and Ameis, Stephanie H},
