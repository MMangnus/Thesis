	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/hbm.20422},
	keywords = {anterior temporal lobe, fronto-medial cortex, language interpretation, metaanalysis, neuroimaging, pragmatics, right hemisphere, text comprehension, theory-of-mind},
	pages = {581--593},
	annote = {Brain regions involved in language processing and ToM are necessary for narrative, inferential, and metaphoric text.
},
