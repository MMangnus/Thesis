	journal = {Autism research : official journal of the International Society for Autism Research},
	author = {Hasson, Uri and Avidan, Galia and Gelbard, Hagar and Vallines, Ignacio and Harel, Michal and Minshew, Nancy and Behrmann, Marlene},
